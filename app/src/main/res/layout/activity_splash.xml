<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D1D1D">
        <ImageView
            android:id="@+id/splash_bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <Button
            android:id="@+id/splash_bg_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:alpha="0"/>

        <RelativeLayout
            android:id="@+id/btGuide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/item_tab"
            android:padding="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/left_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳过 ("
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/read_seconds"
                android:layout_toRightOf="@+id/left_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 5 "
                android:textColor="#FFECB0"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@+id/read_seconds"
                android:id="@+id/right_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</layout>