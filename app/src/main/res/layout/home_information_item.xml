<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="222dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_tab"
            >

            <ImageView
                android:layout_marginTop="191dp"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_shade_upper1"
                android:visibility="gone"/>

            <com.android.liuzhuang.rcimageview.RoundCornerImageView
                android:id="@+id/iv_movie"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:background="@mipmap/img_3"
                app:rciv_radius="10dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/right_play_icon"
                android:layout_width="41dp"
                android:layout_height="43dp"
                android:src="@mipmap/icon_play"
                android:visibility="visible"
                android:layout_centerInParent="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/tv_movie_layout"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/iv_movie"
                >
                <ImageView
                    android:layout_marginTop="-16dp"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_shade_upper1"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/tv_movie_name"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/default_name"
                    android:textColor="#CFCFCF"
                    android:textSize="13sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>