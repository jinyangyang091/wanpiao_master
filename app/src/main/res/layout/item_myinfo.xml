<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_backgroud_information"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_marginLeft="9dp"
            android:layout_width="109dp"
            android:layout_height="134dp">
            <ImageView
                android:id="@+id/info_img"
                android:layout_width="109dp"
                android:layout_height="133dp"
                android:src="@mipmap/img_b"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/info_corner"
                android:layout_width="47dp"
                android:layout_height="45dp"
                android:src="@mipmap/img_yishangying"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/info_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="18sp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="17dp"
            android:text="STRANGE Alibaba STRANGE STRANGE"
            android:singleLine="true"
            android:ellipsize="end"
            android:typeface="@{@string/font_bold}"/>
        <TextView
            android:id="@+id/info_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="12sp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="49dp"
            android:text="導演：徐成義"
            android:typeface="@{@string/font_bold}"/>
        <TextView
            android:id="@+id/info_showtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B58A40"
            android:textSize="12sp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="76dp"
            android:text="2018年7月6日 上映"
            android:typeface="@{@string/font_bold}"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/info_type"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="125dp"
            />
        <RelativeLayout
            android:layout_width="52dp"
            android:layout_height="64dp"
            android:layout_marginLeft="315dp">
            <ImageView
                android:id="@+id/info_score_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/img_score"/>
            <TextView
                android:id="@+id/info_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#321F33"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="5.6"
                android:typeface="@{@string/font_bold}"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>