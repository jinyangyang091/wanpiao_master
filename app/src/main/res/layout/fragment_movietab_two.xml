<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.liaoinstan.springview.widget.SpringView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/movie_two_springview"
            android:background="#1C1C1E"
            android:visibility="visible">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/movie_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:overScrollMode="never"
                />
        </com.liaoinstan.springview.widget.SpringView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gallery_relative_two"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_container"
                android:background="#1C1C1E">
                <com.wanpiao.master.utils.gallery.GalleryRecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="515dp"
                    android:id="@+id/g_list"
                    >
                </com.wanpiao.master.utils.gallery.GalleryRecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/center_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:visibility="visible"
                            android:gravity="top"
                            android:typeface="@{@string/font_bold}"
                            />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/comment_text_one"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:drawableLeft="@mipmap/icon_discuss_big"
                            android:drawablePadding="5dp"
                            android:text="128"
                            android:textColor="#BDACBF"
                            android:textSize="15sp"
                            android:visibility="visible"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="62dp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/center_text"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="2018年9月20日"
                            android:textColor="#DFCF9D"
                            android:textSize="15sp"
                            android:visibility="visible"
                            android:gravity="top"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:typeface="@{@string/font_bold}"
                            />
                        <TextView
                            android:id="@+id/want_text_one"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:drawableLeft="@mipmap/icon_laud_big"
                            android:drawablePadding="5dp"
                            android:text="366"
                            android:textColor="#F5A181"
                            android:textSize="15sp"
                            android:visibility="visible"
                            android:gravity="top"
                            android:layout_marginRight="62dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                        <ImageView
                            android:id="@+id/div_left"
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:background="#BDACBF"
                            android:layout_marginLeft="133dp"
                            android:layout_centerVertical="true"

                            />
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"
                            android:background="#BDACBF"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="133dp"
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</layout>